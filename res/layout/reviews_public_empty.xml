<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/cards_window_background"> <!-- overlay detail on scroll -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/cards_parent_margin"
        android:layout_marginRight="@dimen/cards_parent_margin"
        android:background="@drawable/card"
        android:orientation="vertical">

        <TextView
            style="@style/Card.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reviews_public_empty_title"/>

        <TextView
            android:id="@+id/search"
            style="@style/Card.Text.Medium.Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_action_search_link"
            android:drawablePadding="@dimen/padding_small"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/padding"
            android:text="@string/reviews_public_empty_text"/>

    </LinearLayout>
</FrameLayout>
